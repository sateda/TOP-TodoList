{
  "name": "TOP-TodoList",
  "version": "1.0.0",
  "description": "A Todo List project from The Odin Project using Webpack",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --open --config webpack.dev.js",
