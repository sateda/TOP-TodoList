    "type": "git",
    "url": "git+https://github.com/sateda/TOP-TodoList.git"
  },
  "bugs": {
    "url": "https://github.com/sateda/TOP-TodoList/issues"
  },
  "homepage": "https://sateda.github.io/TOP-TodoList/",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
